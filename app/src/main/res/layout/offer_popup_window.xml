<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_centerInParent="true"

android:layout_width="match_parent"
android:layout_height="match_parent">

    <LinearLayout
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"

        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:layout_alignParentEnd="false">
        >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="211dp"
                android:text="Unlimited calls to Smart/Sun/TNT Unlimited texts to all networks Free Spinnr &amp; Surf (up to 10"
                android:id="@+id/confirm_textview"
                android:focusable="true"
                android:scrollIndicators="end|right"
                android:textColor="#101010"
                android:textSize="15dp" />

        <Button
                android:id="@+id/confirm_buy_button"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Confirm"
                android:layout_gravity="center_horizontal" />
            <Button
                android:id="@+id/cancel_buy_button"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:layout_gravity="center_horizontal" />

    </LinearLayout>
</RelativeLayout>
